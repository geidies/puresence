<!doctype html>
<html>
<head>
  <title>Is Someone At Werkstatt</title>
  <link rel="stylesheet" type="text/css" href="css/main.css" media="screen" />
  <link rel="stylesheet" type="text/css" href="css/handheld.css" media="only screen and (max-device-width: 480px)" />
  <link rel="icon" type="image/png" href="images/favicon_<%= @ticktock %>.png" />
  <link rel="apple-touch-icon" href="images/touch-icon-blue.png" />
  <link rel="apple-touch-startup-image" href="images/startup.png" media="screen" />
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
</head>
<body>
  <div id="container">
    <div id="banner"><%= @message %></div>
    <div class="center">
      <img src="images/<%= @status %>.png" alt="<%= @message %>">
      <% if @message != nil %>
        <p class="message"><%= @message %></p>
      <% end %>
      <div id="controls">
        <a href="/come" class="button bg-green">
          I'm here now!
        </a>
        <a href="/go" class="button bg-red">
          I'm going home.
        </a>

        <% unless @status && @status != "plan" %>
        <div class="button bg-yellow" id="pick_time">
          I'll be there...
        </div>
        <% end %>
        <div id="timepicker">
          <p>I'll be there in...</p>
          <table>
            <tbody>
              <tr>
                <td>
                  <a href="/plan/15" class="button bg-white">
                    15
                  </a>
                </td>
                <td>
                  <a href="/plan/30" class="button bg-white">
                    30
                  </a>
                </td>
              </tr>
              <tr>
                <td>
                  <a href="/plan/45" class="button bg-white">
                    45
                  </a>
                </td>
                <td>
                  <a href="/plan/60" class="button bg-white">
                    60
                  </a>
                </td>
              </tr>
            </tbody>
          </table>
          <p>minutes.</p>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    (function() {
     var source = document.getElementById('pick_time');
     var target = document.getElementById('timepicker');
     if (source){
       source.addEventListener('click', function() {
         target.style.display = 'block';
         });

       var body = document.documentElement;
       body.addEventListener('click', function(e) {
         if ( e.target != source
              && e.target != target
              && target.style.display != 'none' ) {
           target.style.display = 'none';
         }  
       });
     }
    })();
  </script>
</body>
</html>
